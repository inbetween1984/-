#include <stdio.h>
#include <math.h>
#include <stdlib.h>

double fact(int z) {
	int i = 1;
	double g = 1;
	while (i <= z) {
		g *= i;
		i++;
	}
	return g;
}

int main() {
	double x, e;
	scanf_s("%lf", &x);
	scanf_s("%lf", &e);
	if (e > 1 || e < 0) {
		printf("неверное знаечение е");
		return 0;
	}
	double y, s;
	y = 1.0;
	s = 0.0;
	int n = 0;
	while (abs(y) > e) {
		y *= ((pow(-1, n) * pow(x, 2 * n)) / fact(n));
		n++;
		s += ((pow(-1, n) * pow(x, 2 * n)) / fact(n));
	}
	printf("%lf\n", 1.0 + s);
	printf("%lf", exp(-1 * pow(x, 2)));
	return 0;
	
}



#include <stdio.h>
#include <math.h>
#include <stdlib.h>
#include <locale.h>


int main() {
    //задаем массив, N ввод с клавиатуры
    setlocale(LC_ALL, "rus");
    int N, * a, sum = 0;
    printf("введите размер массива: ");
    scanf_s("%d", &N);
    a = malloc(N * sizeof(a[0]));

    for (int i = 0; i < N; i++) {
        scanf_s("%d", &a[i]);
    }
    int max = a[1], min = a[0];
    //определяем сумму отрицательных элементов массива
    for (int i = 0; i < N; i++) {
        if (a[i] < 0) {
            sum += a[i];
        }
    }
    //определяем минимальный и максимальный элементы и их индексы
    int imin = 0;
    for (int i = 0; i < N; i++) {
        if (a[i] < min) {
            min = a[i];
            imin = i;
        }
    }
    int imax = 0;
    for (int i = 0; i < N; i++) {
        if (a[i] > max) {
            max = a[i];
            imax = i;
        }
    }
    //считаем произведение элементов между максимальным и минимальным элементами
    int mult = 1;
    if (imax > imin) {
        for (int i = imin + 1; i < imax; i++) {
            mult *= a[i];
        }
    }
    else if (imax < imin) {
        for (int i = imax + 1; i < imin; i++) {
            mult *= a[i];
        }
    }
    printf("минимальный элемент массива =%d максимальный эелемент массива = %d\n", min, max);
    printf("сумма отрицательных элементов массива = %d\n", sum);
    printf("произведение элементов массива между минимальным и максимальным = %d\n", mult);

    free(a);
}



